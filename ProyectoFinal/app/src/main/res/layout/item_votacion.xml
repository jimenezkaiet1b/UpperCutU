<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:background="?attr/colorSurface"
    android:backgroundTint="?attr/colorSurface"
    app:cardBackgroundColor="?attr/colorSurface"
    app:cardCornerRadius="12dp"
    app:cardElevation="12dp"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="4dp"
        android:background="?attr/colorSurface"
        android:backgroundTint="?attr/colorSurface"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/itemList_imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/boxing_glove_svgrepo_com"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/boxer1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boxer 1 Name"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/boxer2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Boxer 2 Name"
                android:textColor="?attr/colorOnBackground" />

            <TextView
                android:id="@+id/numberOfRoundsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Rounds"
                android:textColor="?attr/colorOnBackground" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/itemList_deleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/baseline_delete_24" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
