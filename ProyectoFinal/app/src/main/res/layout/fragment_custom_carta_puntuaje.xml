<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/customCartaPuntuajeFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS DE LA CARTA DE PUNTUAJE"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20dp"/>

    <EditText
        android:layout_marginTop="50dp"
        android:id="@+id/boxer1_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Boxeador 1"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/boxer2_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Boxeador 2"
        android:inputType="textPersonName"
        android:layout_marginBottom="16dp" />

    <Spinner
        android:id="@+id/number_of_rounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/rounds_array"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Guardar" />

</LinearLayout>
